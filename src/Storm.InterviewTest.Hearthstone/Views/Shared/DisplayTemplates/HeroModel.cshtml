@model Storm.InterviewTest.Hearthstone.Models.HeroModel

<div class="panel panel-default">
    <div class="row">
        <div class="col-md-3">
            @{ Html.RenderPartial("_Card", Model); }
        </div>
        <div class="col-md-9">
            <form class="form-horizontal">
                <div class="form-group">
                    <label class="form-control-static">@Html.DisplayNameFor(model => model.Name)</label>
                    <input type="text" readonly="readonly" class="form-control" value="@Html.DisplayFor(model => model.Name)" />
                </div>
                <div class="form-group">
                    <label class="form-control-static">@Html.DisplayNameFor(model => model.Type)</label>
                    <input type="text" readonly="readonly" class="form-control" value="@Html.DisplayFor(model => model.Type)" />
                </div>
                <div class="form-group">
                    <label class="form-control-static">@Html.DisplayNameFor(model => model.Rarity)</label>
                    <input type="text" readonly="readonly" class="form-control" value="@Html.DisplayFor(model => model.Rarity)" />
                </div>                            
                <div class="form-group">
                    <label class="form-control-static">@Html.DisplayNameFor(model => model.Faction)</label>
                    <input type="text" readonly="readonly" class="form-control" value="@Html.DisplayFor(model => model.Faction)" />
                </div>
            </form>
        </div>
    </div>
    <div class="panel panel-footer">
        <a asp-controller="Cards" asp-action="Index">Back to Cards</a>
    </div>
</div>
